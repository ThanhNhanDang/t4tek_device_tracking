<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_product_card_list" model="ir.ui.view">
        <field name="name">product_card_list.2tab</field>
        <field name="model">product_card_list.2tab</field>
        <field name="arch" type="xml">
            <form string="Danh sách sản phẩm">
                <sheet>
                    <!-- <separator class="fs-2" string="" /> -->
                    <notebook class="mt-4">
                        <page name="in_stock" string="Nhập kho">
                            <field name="custom_view_field"
                                widget="parking_one_2_many_history"
                                options="{'isIn': true,'isContact':true}" />
                        </page>
                        <page name="out_stock" string="Xuất kho">
                            <field name="custom_view_field"
                                widget="parking_one_2_many_history"
                                options="{'isIn': false,'isContact':true}" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_card_list_action" model="ir.actions.act_window">
		<field name="name">Danh sách sản phẩm</field>
		<field name="res_model">product_card_list.2tab</field>
		<field name="res_id" ref="product_card_2tab_record" />
		<field name="view_mode">form</field>
		<field name="context">{'create':0, 'delete':0, 'edit':0}</field>
	</record>
</odoo>